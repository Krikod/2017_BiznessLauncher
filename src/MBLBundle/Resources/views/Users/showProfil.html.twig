{% extends '@MBL/layout.html.twig' %}

{% block titreH2 %} <h2>{{ 'Mon profil public'|trans }}</h2> {% endblock %}

{% block body %}
<div class="container showprofil">
    <div class="row align">


        <div class="col s5 offset-s1 cartepro">
            <div class="row">
                <div class="col s12 title ">
                    <h4 id="titre">{{ profilType.nom  }} {{ profilType.prenom }}</h4>
                </div>
                <div class="col s12 imgpro">
                    <img src="{{ asset('bundles/mbl/img/kyan.png') }}" alt="photo de profil"/>
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                    <h5>{{ 'Description:'|trans }}</h5>
                    {% if profilType.description is same as(null) %}
                        <p>{{ 'Non renseignée'|trans }}</p>
                    {% else %}
                        <p>{{ profilType.description }}</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col s5 cartepro2">
            <div class="row">

                    <div class="col s6 ">
                        <h5>LinkedIn:</h5>
                        {% if profilType.linkedIn is same as(null) %}
                            <p>{{ 'Non renseigné'|trans }}</p>
                        {% else %}
                            <p>{{ profilType.linkedIn }}</p>
                        {% endif %}
                    </div>

                    <div class="col s6 ">
                        <h5>{{ 'Localisation:'|trans }}</h5>
                        {% if profilType.localisation is same as(null) %}
                            <p>{{ 'renseignez votre localisation'|trans }}</p>
                        {% else %}
                            <p>{{ profilType.localisation }}</p>
                        {% endif %}
                    </div>

                    <div class="col s6 ">
                        <h5>{{ 'Investissement:'|trans }}</h5>
                        {% if profilType.invest is same as(null) %}
                            <p>{{ 'Non renseigné'|trans }}</p>
                        {% else %}
                            <p>{{ profilType.invest.invest }}</p>
                        {% endif %}
                    </div>

                    <div class="col s6 ">
                        <h5>{{ 'En tant que:'|trans }}</h5>
                        {% if profilType.etq is same as(null) %}
                            <p>{{ 'renseignez votre status'|trans }}</p>
                        {% else %}
                            <p>{{ profilType.etq.etq }}</p>
                        {% endif %}
                    </div>

                    <div class="col s6 ">
                        <h5>{{ 'Disponibilité:'|trans }}</h5>
                        {% if profilType.dispo is same as(null) %}
                            <p>{{ 'Non renseignée'|trans }}</p>
                        {% else %}
                            <p>{{ profilType.dispo.dispo }}</p>
                        {% endif %}
                    </div>

                    <div class="col s6 ">
                        <h5>{{ 'Où:'|trans }}</h5>
                        {% if profilType.ou is same as(null) %}
                            <p>{{ 'Non renseigné'|trans }}</p>
                        {% else %}
                            <p>{{ profilType.ou.Ou }}</p>
                        {% endif %}
                    </div>

                    <div class="col s6 ">
                        <h5>{{ 'Métiers:'|trans }}</h5>
                        {% if profilType.metier is same as(null) %}
                            <p>{{ 'précisez votre métier'|trans }}</p>
                        {% else %}
                            <p>{{ profilType.metier.metier }}</p>
                        {% endif %}
                    </div>

                    <div class="col s6 ">
                        <h5>{{ 'Compétences:'|trans }}</h5>
                        {% if profilType.competences is empty %}
                            <p>{{ 'renseignez vos compétences'|trans }}</p>
                        {% else %}
                            <p>{% for competences in profilType.competences %} {{ competences.competences }} {% endfor %}</p>
                        {% endif %}
                    </div>
            </div>

        </div>
    </div>
        <div class="col s12 modpro ">
            <a class="btn" href="{{ path('editProfil', { 'id': profilType.id }) }}">{{ 'Modifier mon profil'|trans }}</a>
        </div>

</div>

{% endblock %}