{% extends '@MBL/layout.html.twig' %}

{% block titreH2 %} <h2>{{ 'Parcourir les projets'|trans }}</h2> {% endblock %}
{% block body %}


    <div class="showProjet">
        <div class="row">
            {{ form_start(form_secteur) }}

            <div class="col s6">
                {{ form_row(form_secteur.secteur) }}
                {{ form_errors(form_secteur.secteur) }}
            </div>
            <div class="col s6">
                {{ form_row(form_secteur.typeDeProjet) }}
                {{ form_errors(form_secteur.typeDeProjet) }}
            </div>
            <input class="btn" name="chercher" type="submit">
            {{ form_end(form_secteur) }}
        </div>
        <div class="box_projet">

            <div class="row">

                {% for pro in projects %}
                    <a href="{{ path('showOneProject', {'id': pro.id}) }}">
                        <div class="col s6 m3 l2 vignette_projet  z-depth-5">
                            <div class="row vignette ">
                                <div class="col s12">

                                    {% if pro.titre|length > 10 %}
                                        <h4>{{ pro.titre|slice(0,8) ~ '...'  }}</h4>
                                    {% else  %}
                                        <h4>{{ pro.titre }}</h4>
                                    {% endif %}

                                </div>
                                <div class="col s8 offset-s2 photo_profil">
                                    <img src="{{ asset('bundles/mbl/img/logoebusta.png') }}">
                                </div>
                            </div>
                            <div class="row btnlink">
                                <div class="col s2 offset-s3">
                                    <a class="waves-effect waves-light btn" href="{{ path('showOneProject', {'id' : pro.id})}}">{{ 'Voir'|trans }}</a>
                                    {% if pro.fichier is null %}
                                        <img src="{{ asset('bundles/mbl/img/logoebusta.png') }}">
                                    {% else %}
                                        <img class="responsive-img" src="{{ asset('uploads/images/' ~ pro.fichier.photo ) }}">
                                    {% endif %}
                                </div>
                            </div>
                            {#<div class="row btnlink">#}
                            {#<a class="waves-effect waves-light btn" href="{{ path('showOneProject', {'id' : pro.id})}}">Voir</a>#}
                            {#</div>#}
                            <div class="row info_projet">
                                <div class="col s12">
                                    <h5>{{ 'Profils recherchés'|trans }}</h5>
                                    <h6>Type de projet</h6>
                                    {% for comp in pro.typeDeProjet %}
                                        {{ comp.typeDeProjet}}
                                    {% endfor %}
                                </div>
                                <div class="col s12">
                                    <h6>Profils recherchés</h6>
                                    {% for profil in pro.profilsrecherches %}
                                        {% if profil.metier.metier|length > 10 %}
                                            <p> {{ profil.metier.metier }} ,
                                        {% else  %}
                                            {{ profil.metier.metier }}</p>
                                        {% endif %}

                                    {% endfor %}
                                </div>
                                <div class="col s12">
                                    <h5>{{ 'Localisation'|trans }}</h5>
                                    <p>{{ pro.localisation }}</p>
                                </div>
                                <div class="col s12">
                                    <h5>{{ 'Description'|trans }}</h5>
                                    {#<p>{{ pro.typeDeProjet.typeDeProjet }}</p>#}
                                    {#<p>{{ pro.secteur.secteurActivite}}</p>#}
                                    {#<p>{{ pro.description }}</p>#}
                                    <h6>Localisation</h6>
                                    <p>{{ pro.localisation }}</p>
                                </div>
                                <div class="col s12">
                                    <h6>Description</h6>
                                    <p>{{ pro.description }}</p>
                                </div>
                            </div>
                        </div>



                    </a>

                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('select').material_select();
        });
    </script>

{% endblock %}