{% extends '@MBL/layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/mbl/css/stylesheets/showProject.css') }}" />
{% endblock %}
{% block titreH2 %} <h2>Parcourir les projets</h2> {% endblock %}
{% block body %}
<div class="container">

            <div class="row">
                {% for pro in projects %}
                    <div class="col s2 vignette_projet z-depth-5">
                        <div class="row vignette">
                            <div class="col s12">
                                <h4>Projet : {{ pro.titre }}</h4>
                            </div>
                            <div class="col s8 offset-s2 photo_profil">
                                <img src="{{ asset('bundles/mbl/img/logoebusta.png') }}">
                            </div>
                        </div>
                        <div class="row info_projet">
                            <div class="col s12">
                                <h5>Profils recherch√©s</h5>
                                {% for profil in pro.profilsrecherches %}
                                    <p>{{ profil.metier.metier}}</p>
                                {% endfor %}
                            </div>
                            <div class="col s12">
                                <h5>Localisation</h5>
                                <p>{{ pro.localisation }}</p>
                            </div>
                            <div class="col s12">
                                <h5>Description</h5>
                                <p>{{ pro.description }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
    </div>
{% endblock %}