{% extends '@MBL/layout.html.twig' %}

{% block titreH2 %} <h2>Parcourir les projets</h2> {% endblock %}
{% block body %}


<div class="showProjet">
    <div class="row">
        {{ form_start(form_secteur) }}

        <div class="col s6">
            {{ form_row(form_secteur.secteur) }}
            {{ form_errors(form_secteur.secteur) }}
        </div>
        <div class="col s6">
            {{ form_row(form_secteur.typeDeProjet) }}
            {{ form_errors(form_secteur.typeDeProjet) }}
        </div>
        <input class="btn" name="chercher" type="submit">
        {{ form_end(form_secteur) }}
    </div>
        <div class="box_projet">

            <div class="row">

                {% for pro in projects %}
                    <div class="col l2 m3 s4 vignette_projet">
                        <div class="content z-depth-5">
                            <div class="row vignette">
                                <div class="col s12">
                                    <h4>{{ pro.titre }}</h4>
                                </div>
                                <div class="col s8 offset-s2 photo_profil">
                                    <img src="{{ asset('bundles/mbl/img/logoebusta.png') }}">
                                </div>
                            </div>
                            <div class="row btnlink">
                                <div class="col s2 offset-s3">
                                    <a class="waves-effect waves-light btn" href="{{ path('showOneProject', {'id' : pro.id})}}">Voir</a>
                                </div>
                            </div>
                            <div class="row info_projet">
                                <div class="col s12">
                                    <h5>Profils recherch√©s</h5>
                                    {% for profil in pro.profilsrecherches %}
                                        <p>{{ profil.metier.metier}}</p>
                                    {% endfor %}
                                </div>
                                <div class="col s12">
                                    <h5>Localisation</h5>
                                    <p>{{ pro.localisation }}</p>
                                </div>
                                <div class="col s12">
                                    <h5>Description</h5>

                                    {#<p>{{ pro.typeDeProjet.typeDeProjet }}</p>#}
                                    {#<p>{{ pro.secteur.secteurActivite}}</p>#}
                                    {#<p>{{ pro.description }}</p>#}
                                </div>
                            </div>
                        </div>


                    </div>


                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script>
    $(document).ready(function() {
        $('select').material_select();
    });
</script>

{% endblock %}