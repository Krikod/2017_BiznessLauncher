
{% extends 'MBLBundle::layout.html.twig' %}

{% block titreH2 %}<h2>Nouveau Projet</h2>{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">
            <div class="col s6 center">

                Titre : {{ projet.titre }} <br>
                Description : {{ projet.description }} <br>
                Site Internet : {{ projet.siteInternet }} <br>
                E-busta Url : {{ projet.ebustaUrl }} <br>
                Localisation : {{ projet.localisation }} <br>
                Secteur : {{ projet.secteur.secteurActivite}} <br>
                Type de projet : {{projet.typeDeProjet.typeDeProjet }}<br>
            </div>
            <div class="col s6">
                {{ form_start(form_pro) }}
                {{ form_end(form_pro) }}
            </div>


        </div>



        <div class="row">
        {% for profil in profil_Recheche_exist %}

                <div class="col s3">
                    Disponibilité : {{ profil.dispo.dispo }} <br>
                    ETQ : {{ profil.ETQ.etq }} <br>
                    Ou : {{ profil.ou.ou }} <br>
                    Investissement : {{ profil.invest.invest }} <br>
                    Metier : {{ profil.metier.metier }} <br>
                    {% for comp in profil.competences %}
                        Compétences : {{ comp.competences }} <br>
                    {% endfor %}
                </div>

        {% endfor %}
    </div>

    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('select').material_select();
        });
    </script>
{% endblock %}