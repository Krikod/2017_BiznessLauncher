{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
    <div class="row card-panel register_must">


        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

            <h1 class="black-text center">Enregistrez-vous</h1>
            <div class="col s6 left-align">


                {{ form_label(form.nom, 'Nom *') }}
                {{ form_widget(form.nom) }}
                {{ form_errors(form.nom) }}

                {{ form_label(form.prenom, 'Prénom *') }}
                {{ form_widget(form.prenom) }}
                {{ form_errors(form.prenom) }}

                {{ form_label(form.email,'Votre E-mail *') }}
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}

            </div>
            <div class="col s6 left-align">

                {{ form_label(form.plainPassword.first, 'Mot de passe *') }}
                {{ form_widget(form.plainPassword.first) }}
                {{ form_errors(form.plainPassword.first) }}

                {{ form_label(form.plainPassword.second, 'Confirmer votre mot de passe *') }}
                {{ form_widget(form.plainPassword.second) }}
                {{ form_errors(form.plainPassword.second) }}

            </div>

            <div class="col s12 center">
                <input type="submit" value="{{ 'registration.submit'|trans }}" />
            </div>

    </div>
    <div class="row card-panel">
            <h1 class="black-text center">Ajoutez une description plus comlête</h1>

            <div class="col s6 left-align">

                {{ form_label(form.description, 'Une description de vous :') }}
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}

                {{ form_label(form.linkedin, 'Votre compte linked-in :') }}
                {{ form_widget(form.linkedin) }}
                {{ form_errors(form.linkedin) }}

                {{ form_label(form.localisation, 'Ou habitez-vous :') }}
                {{ form_widget(form.localisation) }}
                {{ form_errors(form.localisation) }}

                {{ form_label(form.metier, 'Quel est votre métier :') }}
                {{ form_widget(form.metier) }}
                {{ form_errors(form.metier) }}
            </div>
            <div class="col s6 left-align">
                {{ form_row(form.etq) }}
                {{ form_row(form.ou) }}
                {{ form_row(form.invest) }}
                {{ form_row(form.dispo) }}
                {{ form_row(form.competences) }}
            </div>

            <div class="center">
                <input type="submit" value="{{ 'registration.submit'|trans }}" />
            </div>
        </div>

        {{ form_end(form) }}
    </div>
</div>

