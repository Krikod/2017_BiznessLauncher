{% trans_default_domain 'FOSUserBundle' %}
<div id="register">
    <div class="container">
        <div class="row">
            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
            <h1 class="black-text center">Enregistrez-vous</h1>
            <div class="col s12 center">
                <div class="row">
                    <div class="col s6">
                        <div class="row">
                            <div class="col s12 center">
                                {{ form_label(form.nom, 'Nom *') }}
                            </div>
                        </div>
                        {{ form_widget(form.nom, {'attr' : {'placeholder' : ' Nom'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>
                    <div class="col s6">
                        <div class="row">
                            <div class="col s12 center">
                                {{ form_label(form.prenom, 'Prénom *') }}
                            </div>
                        </div>
                        {{ form_widget(form.prenom, {'attr' : {'placeholder' : ' Prénom'}}) }}
                        {{ form_errors(form.prenom) }}
                    </div>
                    <div class="col s6">
                        <div class="row">
                            <div class="col s12 center">
                                {{ form_label(form.email,'Votre E-mail *') }}
                            </div>
                        </div>
                        {{ form_widget(form.email, {'attr' : {'placeholder' : ' E-mail'}}) }}
                        {{ form_errors(form.email) }}
                    </div>
                    <div class="col s6">
                        <div class="row">
                            <div class="col s12 center">
                                {{ form_label(form.plainPassword.first, 'Mot de passe *') }}
                            </div>
                        </div>
                        {{ form_widget(form.plainPassword.first, {'attr' : {'placeholder' : ' Mot de passe'}}) }}
                        {{ form_errors(form.plainPassword.first) }}
                    </div>
                    <div class="col s6">
                        <div class="col s12 center">
                            <input class="btn submitRegister" type="submit" value="{{ 'registration.submit'|trans }}" />
                        </div>
                    </div>
                    <div class="col s6">
                        <div class="row">
                            <div class="col s12 center">
                                {{ form_label(form.plainPassword.second, 'Confirmer votre mot de passe *') }}
                            </div>
                        </div>
                        {{ form_widget(form.plainPassword.second, {'attr' : {'placeholder' : ' Confirmez votre mot de passe'}}) }}
                        {{ form_errors(form.plainPassword.second) }}
                    </div>
                </div>

                {#  Registration supplémentaire (optionnel) #}

                <div class="row">
                    <div class="col s12 center">
                        <button type="button" class="btn registerPlus">Créer votre profil</button>
                    </div>
                    <div class="col s12 center">
                        <div class="moreRegisterHidden moreRegister">
                            <h1 class="black-text center">Ajoutez une description plus complête</h1>
                            <div class="col s6 center">
                                <div class="col s6">
                                    <div class="row">
                                        <div class="col s12 center">
                                            {{ form_label(form.description, 'Description :') }}
                                        </div>
                                    </div>
                                    {{ form_widget(form.description, {'attr' : {'placeholder' : ' Description'}}) }}
                                    {{ form_errors(form.description) }}
                                </div>

                                {{ form_label(form.description, 'Description :') }}


                                {{ form_label(form.linkedin, 'Votre compte linked-in :') }}
                                {{ form_widget(form.linkedin, {'attr' : {'placeholder' : ' Linked-in'}}) }}
                                {{ form_errors(form.linkedin) }}

                                {{ form_label(form.localisation, 'Localisation :') }}
                                {{ form_widget(form.localisation, {'attr' : {'placeholder' : ' Localisation'}}) }}
                                {{ form_errors(form.localisation) }}

                                {{ form_label(form.metier, 'Quel est votre profil :') }}
                                {{ form_widget(form.metier, {'attr' : {'class' : 'blue lighten-4'}}) }}
                                {{ form_errors(form.metier) }}
                            </div>
                            <div class="col s6 center">

                                {{ form_label(form.etq, 'Disponible en tant que') }}
                                {{ form_widget(form.etq, {'attr' : {'class' : 'blue lighten-4'}}) }}
                                {{ form_errors(form.etq) }}

                                <div class=" center">
                                    {{ form_label(form.competences, 'Compétences :') }}
                                    {{ form_widget(form.competences, {'attr' : {'class' : 'blue lighten-4'}}) }}
                                    {{ form_errors(form.competences) }}
                                </div>
                                {{ form_label(form.dispo, 'Disponibilité :') }}
                                {{ form_widget(form.dispo, {'attr' : {'class' : 'blue lighten-4'}}) }}
                                {{ form_errors(form.dispo) }}
                                <div class=" center">
                                    {{ form_label(form.ou, 'Où ça ? :') }}
                                    {{ form_widget(form.ou, {'attr' : {'class' : 'blue lighten-4'}}) }}
                                    {{ form_errors(form.ou) }}
                                </div>
                                {{ form_label(form.invest, 'Investissement possible :') }}
                                {{ form_widget(form.invest, {'attr' : {'class' : 'blue lighten-4'}}) }}
                                {{ form_errors(form.invest) }}
                            </div>

                            <div class="center">
                                <input class="btn" type="submit" value="{{ 'registration.submit'|trans }}" />
                            </div>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

