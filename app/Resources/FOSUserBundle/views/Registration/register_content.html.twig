{% trans_default_domain 'FOSUserBundle' %}



<div id="register">
    <div class="container">
        <div class="row">

            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

            <h1 class="black-text center">{{ 'Enregistrez-vous'|trans}}</h1>
            <div class="col s12 center">

                <div class="row">
                    <div class="col s6">
                        <div class="row">
                            <div class="col s12 center">
                                <label>{{ 'Nom:'|trans }}*</label>
                            </div>
                        </div>
                        {{ form_widget(form.nom, {'attr' : {'placeholder' : ' Nom'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>
                    <div class="col s6">
                        <div class="row">
                            <div class="col s12 center">
                                <label>{{ 'Prenom:'|trans }}*</label>
                            </div>
                        </div>
                        {{ form_widget(form.prenom, {'attr' : {'placeholder' : ' Prénom'}}) }}
                        {{ form_errors(form.prenom) }}
                    </div>
                    <div class="col s6">
                        <div class="row">
                            <div class="col s12 center">
                                <label>{{ 'E-mail'|trans }}*</label>
                            </div>
                        </div>

                        {{ form_widget(form.email, {'attr' : {'placeholder' : ' E-mail'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="col s6">
                        <div class="row">
                            <div class="col s12 center">
                                <label>{{ 'Mot de passe'|trans }}*</label>
                            </div>
                        </div>
                        {{ form_widget(form.plainPassword.first, {'attr' : {'placeholder' : ' Mot de passe'}}) }}
                        {{ form_errors(form.plainPassword.first) }}
                    </div>

                    <div class="col s6">
                        <div class="row">
                            <div class="col s12 center">

                                <label>{{ 'Confirmer votre mot de passe'|trans }}*</label>
                            </div>
                        </div>
                        {{ form_widget(form.plainPassword.second, {'attr' : {'placeholder' : ' Confirmez votre mot de passe'}}) }}
                        {{ form_errors(form.plainPassword.second) }}
                    </div>
                    <div class="center">
                        <input class="btn" type="submit" value="{{ 'registration.submit'|trans }}" />
                    </div>
                </div>


  Registration supplémentaire (optionnel)


                <div class="row">
                    <div class="col s12 center">
                        <button type="button" class="btn registerPlus">Créer votre profil</button>
                    </div>
                    <div class="col s12 center">
                        <div class="moreRegisterHidden moreRegister">
                            <h1 class="black-text center">{{ 'Ajoutez une description plus complête'|trans}}</h1>


                            <div class="col s12 center">
                                <div class="row">
                                    <div class="col s6">
                                        <div class="col s12 center">
                                            <label>{{ 'Description'|trans }}</label>
                                        </div>
                                        {{ form_widget(form.description, {'attr' : {'class' : 'customRegister ','placeholder' : ' Description'}}) }}
                                        {{ form_errors(form.description) }}
                                    </div>
                                    <div class="col s6">
                                        <div class="col s12 center">
                                            <label>{{ 'Votre compte linkedIn'|trans }}</label>
                                        </div>

                                        {{ form_widget(form.linkedin, {'attr' : {'class' : 'customRegister ','placeholder' : ' Linked-in'}}) }}
                                        {{ form_errors(form.linkedin) }}

                                    </div>


                                    <div class="col s6">

                                        <div class="col s12 center">
                                            <label>{{ 'Localisation'|trans }}</label>
                                        </div>


                                        {{ form_widget(form.localisation, {'attr' : {'class' : 'center customRegister ','placeholder' : ' Localisation'}}) }}
                                        {{ form_errors(form.localisation) }}
                                    </div>
                                    <div class="col s6">
                                        <div class="col s12 center">

                                            <label>{{ 'Quel est votre profil'|trans }}</label>

                                        </div>
                                        {{ form_widget(form.metier, {'attr' : {'class' : 'center customRegister lighten-4'}}) }}
                                        {{ form_errors(form.metier) }}
                                    </div>
                                    <div class="col s6">
                                        <div class="col s12 center">
                                         <label>{{ 'Ville'|trans }}</label>

                                        </div>

                                        {{ form_widget(form.ville, {'attr' : {'class' : 'center customRegister ', 'placeholder' : ' Ville'}}) }}
                                        {{ form_errors(form.ville) }}

                                    </div>



                                    <div class="col s6">
                                        <div class="col s12 center">
                                            <label>{{ 'Disponible en tant que'|trans }}</label>
                                        </div>
                                        {{ form_widget(form.etq, {'attr' : {'class' : 'customRegister lighten-4'}}) }}
                                        {{ form_errors(form.etq) }}
                                    </div>
                                    <div class="col s6">
                                        <div class="col s12 center">
                                            <label>{{ 'Compétences'|trans }}</label>
                                        </div>
                                        {{ form_widget(form.competences, {'attr' : {'class' : 'customRegister lighten-4'}}) }}
                                        {{ form_errors(form.competences) }}
                                    </div>
                                    <div class="col s6">
                                        <div class="col s12 center">
                                            <label>{{ 'Disponibilité'|trans }}</label>
                                        </div>
                                        {{ form_widget(form.dispo, {'attr' : {'class' : 'customRegister lighten-4'}}) }}
                                        {{ form_errors(form.dispo) }}
                                    </div>
                                    <div class="col s6">
                                        <div class="col s12 center">
                                            <label>{{ 'Où ça ?'|trans }}</label>
                                        </div>
                                        {{ form_widget(form.ou, {'attr' : {'class' : 'customRegister lighten-4'}}) }}
                                        {{ form_errors(form.ou) }}
                                    </div>
                                    <div class="col s6">
                                        <div class="col s12 center">
                                            <label>{{ 'Investissement possible'|trans }}</label>
                                        </div>
                                        {{ form_widget(form.invest, {'attr' : {'class' : 'customRegister lighten-4'}}) }}
                                        {{ form_widget(form.invest, {'attr' : {'class' : 'customRegister lighten-4'}}) }}
                                        {{ form_errors(form.invest) }}
                                    </div>
                                </div>
                            </div>
                            <div class="center">
                                <input class="btn" type="submit" value="{{ 'registration.submit'|trans }}" />
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
