<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <!-- Materialize -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css">
        {#<link href="https://www.fontify.me/wf/1e6b054bebc65767084f30b7ae3c89e8" rel="stylesheet" type="text/css">#}

        <!-- Favicon internet -->
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <!-- CSS Global -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/mbl/css/stylesheets/main.css') }}" />


        {% block stylesheets %}
        {% endblock %}
        {% block stylesheetsLayout %}
        {% endblock %}
    </head>
    <body>

        {% block header %}{% endblock %}
        {% block bandeau %}{% endblock %}
        {% block body %}{% endblock %}
        {% block footer %}{% endblock %}

        {% block javascripts %}

            <script>
                $(document).ready(function(){
                    $('ul li:first-child ').addClass('disabled');
                    $('ul li:first-child span').css('color', 'lightgrey');
                });
            </script>
            <script src="https://code.jquery.com/jquery-3.2.1.min.js"
                    integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
                    crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
        {% endblock %}
    </body>
</html>
